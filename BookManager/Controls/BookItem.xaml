<UserControl x:Class="BookManager.BookItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookManager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Width="500">
        <CheckBox Margin="10" IsChecked="{Binding IsSelected}"/>
        <StackPanel Orientation="Horizontal">
        <TextBlock FontWeight="Bold" Margin="10" Text="{Binding Title}" />
            <TextBlock Margin="10" Text="{Binding Author}" />
        </StackPanel>
    </StackPanel>
</UserControl>
